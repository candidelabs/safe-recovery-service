generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RecoveryRequest {
  id                      String   @id @default(uuid())
  emoji                   String
  account                 String
  chainId                 Int
  newOwners               String[]
  newThreshold            Int
  nonce                   BigInt
  signatures              Json
  executeTransactionHash  String?  @default("")
  finalizeTransactionHash String?  @default("")
  status                  String
  discoverable            Boolean  @default(true)
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  @@index([account])
}
